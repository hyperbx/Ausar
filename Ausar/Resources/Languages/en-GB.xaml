    <!-- Status -->
    <system:String x:Key="Status_WaitingForGame">Waiting for Halo 5: Forge...</system:String>
    <system:String x:Key="Status_GameIsRunning">Halo 5: Forge is running (PID {0})...</system:String>
    
    <!-- Messages -->
    <system:String x:Key="Message_Question_RestoreDefaults_Body">Are you sure you want to reset your configuration?</system:String>
    <system:String x:Key="Message_Warning_ExitWithHooksInstalled_Body">
        There are still patches installed that will not be uninstalled unless you return to the main menu first.\n\n
        
        Exiting now may lead to unexpected behaviour if Ausar is launched again with this same instance of Halo 5: Forge.\n\n
        
        Are you sure you want to quit?"
    </system:String>
    <system:String x:Key="Message_Error_Generic_Title">An error has occurred</system:String>
    <system:String x:Key="Message_Error_GenericUnhandled_Title">An unhandled exception has occurred.\n\n{0}</system:String>
    <system:String x:Key="Message_Error_GameVersionNotSupported_Body">The installed version of Halo 5: Forge is not supported.\n\nExpected: {0}\nReceived: {1}</system:String>
    <system:String x:Key="Message_Error_FailedToLoadConfig_Body">Failed to load configuration.\n\n{0}\n\nThe configuration will now be reset.</system:String>
    <system:String x:Key="Message_Error_FailedToResetConfig_Body">Failed to reset configuration.\n\n{0}</system:String>
    
    <!-- InfoControl -->
    <system:String x:Key="InfoControl_ClickForMoreInfo">Click for more information.</system:String>
    <system:String x:Key="InfoControl_ClickForMoreInfo_Experimental">This is experimental! Click for more information.</system:String>

    <!-- Trainer -->
    <system:String x:Key="Trainer_Graphics">Graphics</system:String>
    <system:String x:Key="Trainer_Performance">Performance</system:String>
