<UserControl x:Class="Ausar.UI.Tabs.Tweaks"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ausar"
             xmlns:au="clr-namespace:Ausar.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="25,20,25,0">
        <StackPanel>
            <au:DescribedCheckBox Content="{DynamicResource Tweaks_DisplayFrontend}" Description="{DynamicResource Tweaks_DisplayFrontend_Description}"
                                  IsChecked="{Binding Mode=TwoWay, Source={x:Static local:App.Settings}, Path=IsToggleFrontend}"/>

            <au:DescribedCheckBox Content="{DynamicResource Tweaks_DisplayNavigationPoints}" Description="{DynamicResource Tweaks_DisplayNavigationPoints_Description}"
                                  IsChecked="{Binding Mode=TwoWay, Source={x:Static local:App.Settings}, Path=IsToggleNavigationPoints}"/>

            <au:DescribedCheckBox Content="{DynamicResource Tweaks_UseRagdolls}" Description="{DynamicResource Tweaks_UseRagdolls_Description}"
                                  IsChecked="{Binding Mode=TwoWay, Source={x:Static local:App.Settings}, Path=IsToggleRagdoll}"/>

            <au:DescribedCheckBox Content="{DynamicResource Tweaks_UseSmallerCrosshairScale}" Description="{DynamicResource Tweaks_UseSmallerCrosshairScale_Description}"
                                  IsChecked="{Binding Mode=TwoWay, Source={x:Static local:App.Settings}, Path=IsToggleSmallerCrosshairScale}"/>

            <au:DescribedCheckBox Content="{DynamicResource Tweaks_UseThirdPersonCamera}" Description="{DynamicResource Tweaks_UseThirdPersonCamera_Description}"
                                  IsChecked="{Binding Mode=TwoWay, Source={x:Static local:App.Settings}, Path=IsToggleThirdPersonCamera}"/>

            <au:DescribedCheckBox Content="{DynamicResource Tweaks_UseWorldSpaceViewModel}" Description="{DynamicResource Tweaks_UseWorldSpaceViewModel_Description}"
                                  IsChecked="{Binding Mode=TwoWay, Source={x:Static local:App.Settings}, Path=IsToggleWorldSpaceViewModel}"/>
        </StackPanel>
    </Grid>
    
</UserControl>
