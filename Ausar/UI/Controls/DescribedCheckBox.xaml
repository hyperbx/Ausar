<UserControl x:Name="Root"
             x:Class="Ausar.UI.Controls.DescribedCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:au="clr-namespace:Ausar.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">

    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
        <CheckBox Content="{Binding ElementName=Root, Path=Content}" IsChecked="{Binding ElementName=Root, Path=IsChecked}"/>
        <au:InfoControl Title="{Binding ElementName=Root, Path=Content}" Description="{Binding ElementName=Root, Path=Description}"/>
    </StackPanel>

</UserControl>
